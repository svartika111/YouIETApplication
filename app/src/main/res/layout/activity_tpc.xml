<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".tpc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:id="@+id/b1"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/tpc"
            android:scaleType="fitXY"
            android:id="@+id/img1"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#2C3E50"
        android:paddingTop="11dp"
        >
        <TextView
            android:id="@+id/text_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginTop="0dp"
            android:gravity="fill_horizontal"
            android:paddingLeft="9dp"
            android:paddingRight="8dp"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:scrollbars="vertical"
            android:text="TRAINING AND PLACEMENT CELL"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#ffffff"
            android:textSize="23dp"
            android:textStyle="bold"
            android:typeface="sans"
            app:fontFamily="@font/alike_angular" />
    </LinearLayout>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardBackgroundColor="@android:color/transparent">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginTop="10dp"
            android:gravity="fill_horizontal"
            android:lineSpacingExtra="4sp"
            android:paddingLeft="10dp"
            android:paddingRight="9dp"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:scrollbars="vertical"
            android:text="Traiing And Placement Cell of UIET is responsible for the entire placement procedure in college. They Approach companies, Manage the placement procedure on the day of interviews and shortlist students according to results provided by companies."
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#5b5b5a"
            android:textSize="14dp"
            android:textStyle="normal"
            android:typeface="sans"
            app:fontFamily="@font/alike_angular" />
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="CONNECT"

            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#5b5b5a"
            android:textSize="14dp"
            android:typeface="sans"
            app:fontFamily="@font/alike_angular" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            >

            <ImageButton
                android:id="@+id/insta"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="2dp"
                android:background="@android:drawable/divider_horizontal_dim_dark"
                android:scaleType="fitStart"
                android:src="@drawable/instagramicon"
                android:onClick="goToinsta"
                android:linksClickable="true"
                />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="79dp"
                android:scaleType="fitStart"
                android:src="@drawable/facebookicon"
                android:background="@android:drawable/divider_horizontal_dim_dark"
                android:layout_marginTop="8dp"
                android:id="@+id/fb"
                android:onClick="goTofb"
                android:linksClickable="true"
                />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
